{
    "name": "the-traveler",
    "version": "0.2.0",
    "description": "A Node.js API wrapper for the Destiny 2 API",
    "keywords": [
        "destiny2",
        "traveler",
        "api",
        "wrapper"
    ],
    "main": "build/traveler.js",
    "author": "Alexander Wei√ü",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/alexanderwe/the-traveler"
    },
    "files": [
        "build/Traveler.js",
        "build/enums.js",
        "build/HttpService.js",
        "build/OAuthError.js"
    ],
    "scripts": {
        "start": "babel-node ./src/index.js --presets es2015,stage-2",
        "build": "tsc --p tsconfig.json --declaration --target es5",
        "watch": "tsc --watch --p tsconfig.json --declaration --target es5",
        "test": "nyc mocha",
        "posttest": "nyc report --reporter=lcov",
        "doc": "typedoc --target ES5 --readme ./README.md --name 'The Traveler' --mode file --out ./docs/ --hideGenerator ./src/*.ts && touch ./docs/.nojekyll"
    },
    "dependencies": {
        "es6-promise": "^4.1.1",
        "request": "^2.81.0",
        "request-promise-native": "^1.0.4"
    },
    "devDependencies": {
        "@types/request-promise-native": "^1.0.6",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "codecov": "^2.3.0",
        "es6-promise": "^4.1.1",
        "minami": "^1.2.3",
        "mocha": "^3.5.0",
        "nyc": "^11.2.1",
        "tslint": "^5.7.0",
        "typedoc-clarity-theme": "^1.1.0",
        "typescript": "^2.5.2"
    }
}
